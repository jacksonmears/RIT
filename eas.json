{
  "cli": {
    "version": ">= 14.5.0",
    "appVersionSource": "remote"
  },
  "build": {
    "android": {
      "prebuildCommand": "echo 'Running Android prebuild...'"
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle"
      },
      "autoIncrement": true,
      "env": {
        "GOOGLE_SERVICES_FILE": "./android/app/google-services.json"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
